    <div class="absolute inset-0 bg-gradient-to-b from-zinc-950/40 via-zinc-950/60 to-zinc-950"></div>
  </div>

  <Hero email={email} website={website} linkedin={linkedin} />
  <WhatIDo />
  <Experience />
  <EducationSkills />
</BaseLayout>
