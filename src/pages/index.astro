---
import BaseLayout from "../layouts/BaseLayout.astro";
import NetworkBackground from "../components/react/NetworkBackground";

import Hero from "../components/home/Hero.astro";
import WhatIDo from "../components/home/WhatIDo.astro";
import Experience from "../components/home/Experience.astro";
import EducationSkills from "../components/home/EducationSkills.astro";

const email = "diegoernestoporrasvera@gmail.com";
const website = "https://diegousa.com";
const linkedin = "https://www.linkedin.com/in/diego-ernesto-porras-vera-76a77a2a4/";
---

<BaseLayout
  title="Diego Porras Vera | Diego Dev"
  description="Systems & Informatics Engineer. Web Developer, Automation (n8n), and Creative Technologist (EN/ES)."
