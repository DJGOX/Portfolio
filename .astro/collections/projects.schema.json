{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "date": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "client": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "en",
              "es"
            ]
          },
          "default": [
            "en"
          ]
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "label",
              "value"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "coverImage": {
          "type": "string"
        },
        "coverAlt": {
          "type": "string"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "media": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "embed",
                "local"
              ],
              "default": "embed"
            },
            "aspect": {
              "type": "string",
              "enum": [
                "16:9",
                "9:16",
                "1:1"
              ],
              "default": "16:9"
            },
            "provider": {
              "type": "string",
              "enum": [
                "youtube",
                "vimeo",
                "tiktok"
              ]
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "src": {
              "type": "string"
            },
            "poster": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "links": {
          "type": "object",
          "properties": {
            "live": {
              "type": "string",
              "format": "uri"
            },
            "reel": {
              "type": "string",
              "format": "uri"
            },
            "download": {
              "type": "string",
              "format": "uri"
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "date",
        "role"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}